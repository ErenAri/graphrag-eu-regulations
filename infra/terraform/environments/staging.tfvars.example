project_id   = "your-gcp-project-id"
region       = "us-central1"
environment  = "staging"
name_prefix  = "sat-graph-rag"
api_image    = "us-central1-docker.pkg.dev/your-gcp-project-id/sat/api:staging"
web_image    = "us-central1-docker.pkg.dev/your-gcp-project-id/sat/web:staging"

api_allow_unauthenticated = false
web_allow_unauthenticated = true

api_min_instances = 0
api_max_instances = 5
web_min_instances = 0
web_max_instances = 3

enable_observability_artifacts   = true
monitoring_notification_channel_ids = [
  "projects/your-gcp-project-id/notificationChannels/1234567890123456789",
]

api_env = {
  LOG_LEVEL           = "INFO"
  AUTH_ENABLED        = "true"
  OIDC_PROVIDER       = "entra"
  OIDC_ROLES_CLAIM    = "roles"
  OIDC_GROUPS_CLAIM   = "groups"
  RATE_LIMIT_ENABLED  = "true"
  RATE_LIMIT_BACKEND  = "redis"
  RATE_LIMIT_FAIL_OPEN = "true"
}

api_secret_env = {
  OPENAI_API_KEY  = "openai-api-key-staging"
  NEO4J_URI       = "neo4j-uri-staging"
  NEO4J_USER      = "neo4j-user-staging"
  NEO4J_PASSWORD  = "neo4j-password-staging"
  OIDC_ISSUER     = "oidc-issuer-staging"
  OIDC_AUDIENCE   = "oidc-audience-staging"
  OIDC_JWKS_URL   = "oidc-jwks-url-staging"
  OIDC_TENANT_ID  = "oidc-tenant-id-staging"
  RATE_LIMIT_REDIS_URL = "rate-limit-redis-url-staging"
}

web_env = {
  NEXT_PUBLIC_API_URL = "https://api-staging.example.com"
}
