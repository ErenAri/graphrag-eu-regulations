# Host profile: use for commands executed directly on the host shell.
APP_NAME=eu-fintech-reg-assistant-api
APP_ENVIRONMENT=development
LOG_LEVEL=INFO
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_CONNECTION_TIMEOUT_SECONDS=10
# For EMBED_PROVIDER=hf, set this equal to EMBED_DIM.
NEO4J_VECTOR_DIMENSIONS=1536
NEO4J_VECTOR_SIMILARITY=cosine
NEO4J_MAX_RETRIES=2
NEO4J_RETRY_BACKOFF_SECONDS=0.2
EMBED_PROVIDER=hash
EMBED_MODEL=BAAI/bge-m3
EMBED_DIM=1024
# Set EMBED_DEVICE=cuda to force GPU, cpu to force CPU, or leave empty for auto-detect.
EMBED_DEVICE=
# Tune with scripts/benchmark_embedding_batch.py; RTX 2060 (6 GB) reference: 80.
EMBED_BATCH_SIZE=16
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=2
AUTH_ENABLED=false
OIDC_PROVIDER=entra
OIDC_TENANT_ID=
OIDC_ISSUER=
OIDC_AUDIENCE=
OIDC_JWKS_URL=
OIDC_JWKS_TIMEOUT_SECONDS=5
OIDC_ROLES_CLAIM=roles
OIDC_GROUPS_CLAIM=groups
# JSON object, e.g. {"<entra-group-id>":"read_only"}
OIDC_GROUP_ROLE_MAP={}
SERVICE_TOKEN=
AUTO_MIGRATE_ON_STARTUP=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_BACKEND=memory
RATE_LIMIT_REDIS_URL=
RATE_LIMIT_TRUST_PROXY=true
RATE_LIMIT_FAIL_OPEN=true
# JSON object, e.g. {"/actions/answer":60,"/actions/answer-orchestrated":30}
RATE_LIMIT_ROUTE_LIMITS={}
HTTP_TIMEOUT_SECONDS=30
HTTP_MAX_RETRIES=2
HTTP_RETRY_BACKOFF_SECONDS=0.25
NEXT_PUBLIC_API_URL=http://localhost:8000
